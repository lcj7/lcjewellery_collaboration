%fieldset
  %legend Meetings

  %table
    %thead
      %tr
        %th
        %th Meeting Session Name
    %tbody
      - meetings.each do |meeting|
        %tr
          %td
            = link_to edit_admin_meeting_path(meeting) do
              %i.icon-pencil
            = link_to admin_meeting_path(meeting), method: :delete, confirm: "Are you sure?" do
              %i.icon-trash
          %td
            - if meeting.is_locked
              = link_to meeting.name, enter_password_meeting_path(meeting)
              %i.icon-lock
            - else
              = link_to meeting.name, join_meeting_path(meeting)